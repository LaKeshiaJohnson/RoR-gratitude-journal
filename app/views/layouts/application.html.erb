<!DOCTYPE html>
<html>
  <head>
    <title>Journal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<% if logged_in? %>

  	<nav class="navbar navbar-expand-lg navbar-light bg-light">
  		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
    	<span class="navbar-toggler-icon"></span>
  		</button>
  		<div class="collapse navbar-collapse" id="navbarTogglerDemo01">
  			<%= link_to "Grateful", entries_path, class: "navbar-brand"  %>
    			<ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      				<li class="nav-item">
        				<%= link_to "New", new_entry_path, class: "nav-link" %>
      				</li>
      				<li class="nav-item">
        				<%= link_to "All", entries_path, class: "nav-link" %>
      				</li>
      				<li class="nav-item">
        				<%= link_to "Log Out", logout_path, class: "nav-link" %>
      				</li>
      			</ul>
  		</div>
	</nav>

	<% end %>
	
  	<div class="container">
    	<%= yield %>
	</div>
  </body>
</html>

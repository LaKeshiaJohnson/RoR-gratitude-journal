<!DOCTYPE html>
<html>
  <head>
    <title>Journal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Satisfy' %>
  </head>

  <body>
  	<% if logged_in? %>

  	<nav class="navbar navbar-expand-lg navbar-dark bg-danger">
  		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    	<span class="navbar-toggler-icon"></span>
  		</button>
  		<div class="collapse navbar-collapse" id="navbarNav">
  			<%= link_to "Grateful", entries_path, class: "navbar-brand"  %>
    			<ul class="navbar-nav navbar-right">
      				<li class="nav-item">
        				<%= link_to "New", new_entry_path, class: "nav-link" %>
      				</li>
      				<li class="nav-item">
        				<%= link_to "All", entries_path, class: "nav-link" %>
      				</li>
              <li class="nav-item">
                <%= link_to "Writing Prompts", prompts_index_path, class: "nav-link" %>
              </li>
      				<li class="nav-item">
        				<%= link_to "Log Out", logout_path, class: "nav-link" %>
      				</li>
      			</ul>
  		</div>
	</nav>

	<% end %>
  	<div class="container">
    	<%= yield %>
	</div>

    <!-- JQUERY -->
    <script type="text/javascript" src="./lib/node_modules/jquery/dist/jquery.min.js"></script>

    <!-- BOOTSTRAP -->
    <!-- <script type="text/javascript" src="./lib/node_modules/bootstrap/dist/js/bootstrap.min.js"></script> -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
  </body>
</html>
